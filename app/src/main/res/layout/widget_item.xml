<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item_root"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:id="@+id/widget_item_quantity"
        android:layout_width="@dimen/ingredient_item_quantity"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="300" />

    <TextView
        android:id="@+id/widget_item_measure"
        android:layout_width="@dimen/ingredient_item_unit"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="gr" />

    <TextView
        android:id="@+id/widget_item_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="sugar" />

</LinearLayout>